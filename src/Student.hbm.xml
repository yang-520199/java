<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hibernate.Student" table="student">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="sno" type="java.lang.String" column="sno"/>
        <property name="sname" type="java.lang.String" column="sname"/>
        <property name="sage" type="java.lang.Integer" column="sage"/>
        <property name="major" type="java.lang.String" column="major"/>

    </class>
</hibernate-mapping>